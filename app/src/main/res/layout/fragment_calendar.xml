<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/bgColor_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:src="@mipmap/bg_calendar_center"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/bg_calendar_top"
                android:scaleType="fitStart"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/paddingHeight_calendar"
            android:scaleX="0.9"
            android:scaleY="0.9">

            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true" >
            </CalendarView>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_calendar_joint"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:src="@mipmap/bg_calendar_center"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/bg_calendar_bottom"
                android:scaleType="fitEnd"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="@dimen/paddingHeight_calendar_menu"
            android:paddingLeft="@dimen/paddingWidth_calendar_menu"
            android:paddingRight="@dimen/paddingWidth_calendar_menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="@dimen/paddingHeight_calendar"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/marginHeight_blackboard"
                    android:paddingLeft="@dimen/paddingWidth_calendar"
                    android:paddingRight="@dimen/paddingWidth_calendar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_menuIcon_staple"
                        android:layout_width="@dimen/iconSize_menuDetailIcon"
                        android:layout_height="@dimen/iconSize_menuDetailIcon"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/tv_calendar_menuName_staple"
                        style="@style/CalendarContentsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/initString_blackboardContents"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/marginHeight_blackboard"
                    android:paddingLeft="@dimen/paddingWidth_calendar"
                    android:paddingRight="@dimen/paddingWidth_calendar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_menuIcon_dishes"
                        android:layout_width="@dimen/iconSize_menuDetailIcon"
                        android:layout_height="@dimen/iconSize_menuDetailIcon"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/tv_calendar_menuName_dishes"
                        style="@style/CalendarContentsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/initString_blackboardContents"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/marginHeight_blackboard"
                    android:paddingLeft="@dimen/paddingWidth_calendar"
                    android:paddingRight="@dimen/paddingWidth_calendar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_menuIcon_drink"
                        android:layout_width="@dimen/iconSize_menuDetailIcon"
                        android:layout_height="@dimen/iconSize_menuDetailIcon"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/tv_calendar_menuName_drink"
                        style="@style/CalendarContentsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/initString_blackboardContents"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/marginHeight_blackboard"
                    android:paddingLeft="@dimen/paddingWidth_calendar"
                    android:paddingRight="@dimen/paddingWidth_calendar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_menuIcon_dessert"
                        android:layout_width="@dimen/iconSize_menuDetailIcon"
                        android:layout_height="@dimen/iconSize_menuDetailIcon"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/tv_calendar_menuName_dessert"
                        style="@style/CalendarContentsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/initString_blackboardContents"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
