<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginTop_listItem_ingredient"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borderColor_gray_95"
        android:layout_marginBottom="@dimen/marginBottom_listItem_ingredient"
        />

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initString_clipboardContents"
        android:textSize="@dimen/fontSize_clipboardSubTitle" />

</LinearLayout>
