<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingHeight_clipboard"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic_allergen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_empty"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_label_allergen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initString_clipboardContents"
        android:textSize="@dimen/fontSize_clipboardContents" />

</LinearLayout>
