<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/baseColor_primary</item>
        <item name="colorPrimaryDark">@color/baseColor_primaryDark</item>
        <item name="colorAccent">@color/baseColor_warning</item>
    </style>

    <style name="BlackboardContentsLabel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontColor_white</item>
        <item name="android:textSize">@dimen/fontSize_blackboardContents</item>
    </style>

    <style name="BlackboardContentsValue" parent="BlackboardContentsLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/initString_blackboardContents</item>
    </style>

    <style name="BlackboardFooterText">
        <item name="android:textColor">@color/fontColor_white</item>
        <item name="android:textSize">@dimen/fontSize_blackboardFooter</item>
    </style>

    <style name="CalendarContentsText">
        <item name="android:textColor">@color/fontColor_gray</item>
        <item name="android:textSize">@dimen/fontSize_blackboardContents</item>
    </style>

</resources>
